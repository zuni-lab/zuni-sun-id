{
  "compilerOptions": {
    "target": "es2020",
    "lib": [
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "allowJs": true,
    "module": "esnext",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "baseUrl": ".",
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@env": [
        "./env"
      ],
      "@/*": [
        "./*"
      ],
      "@/shadcn/*": [
        "./components/shadcn/*"
      ],
    },
    "noEmit": true,
    "strictNullChecks": true
  },
  "extends": "tsconfig/base.json",
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts"
  ],
  "exclude": [
    "contracts",
    "node_modules"
  ]
}
